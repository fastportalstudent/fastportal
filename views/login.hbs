{{#if error}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <strong>Invalid email or password or no account yet!</strong>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<div class="d-flex login">
    <div class="left-section vh-100">
        <img src="logo.png" width="50%">
        <h1>FAME ACADEMY OF SCIENCE <br> AND TECHNOLOGY (INC.)</h1>
        <p><strong>STRONGEST LINK TO THE FUTURE</strong></p>

    </div>
    <div class="d-flex w-50 justify-content-center align-items-center">
        <div>
            <div class="text-primary">
                <h2 class="fontsizeheading fw-bolder">WELCOME</h2>
                <h2 class="fontsizeheading fw-bolder">DIAMONDS!</h2>
            </div>

            <form action="../login-validation" method="post">
                <div>
                    <div>
                        <label class="text-primary" for="email">
                            <h2 class="fw-bold">EMAIL</h2>
                        </label>
                        <br>
                        <input type="eamil" placeholder="Email" class="form-control" name="email" aria-label="Sizing example input"
                            aria-describedby="inputGroup-sizing-lg">
                    </div>
                    <div>
                        <label class="text-primary" for="password">
                            <h2 class="fw-bold">PASSWORD</h2>
                        </label>
                        <br>
                        <input type="password" placeholder="Password" name="password" class="form-control"
                            aria-label="Sizing example input" aria-describedby="inputGroup-sizing-lg">
                    </div>
                    {{!-- <p><a href="#">Forgot your password?</a></p> --}}
                    <p><a href="/tos">Terms of Services and Privacy Policy</a></p>
                    <div class="form-check">

                        <input class="form-check-input border border-primary-subtle" type="checkbox"
                            style="width: 40px; height:40px" value="" id="flexCheckDefault">
                        <label class="form-check-label text-primary" for="flexCheckDefault">
                            <h4 class="fw-bold">  KEEP ME LOGGED IN</h4>
                        </label>
                    </div>
                    <div class="d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-primary btn-lg">Log In</button> 
                    </div>

                </div>
                </form> 
        </div>
    </div>
</div>